# Domain / public URL
# Option 1 (no code changes):
# - Web UI + auth on WWW host
# - API on API host (WWW host can still call /v1/* by design)
WWW_HOSTNAME=www.example.invalid
API_HOSTNAME=api.example.invalid
PUBLIC_BASE_URL=https://www.example.invalid

# Database credentials (do NOT reuse defaults)
POSTGRES_USER=altpocket_prod
POSTGRES_PASSWORD=replace_with_strong_password
POSTGRES_DB=altpocket_prod
DATABASE_URL=postgres://altpocket_prod:replace_with_strong_password@db:5432/altpocket_prod?sslmode=disable

# App secrets (generate with: openssl rand -hex 32)
SESSION_SECRET=replace_with_random_hex
JWT_SECRET=replace_with_random_hex

# Google OAuth credentials
GOOGLE_WEB_CLIENT_ID=replace_with_web_client_id
GOOGLE_CLIENT_SECRET=replace_with_web_client_secret
GOOGLE_EXT_CLIENT_ID=replace_with_extension_client_id

# Optional content limits
CONTENT_FULL_LIMIT_BYTES=1000000
CONTENT_SEARCH_LIMIT_BYTES=16384
